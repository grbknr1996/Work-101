{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@primeuix/*": ["node_modules/@primeuix/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["es2018", "dom"],
    "types": ["node", "jasmine", "pug"],
    "plugins": [
      {
        "name": "typescript-plugin-pug-templates"
      }
    ]
  },
  "angularCompilerOptions": {
    "enableTemplateTypeChecker": true
  },
  "include": ["src/**/*.ts", "src/**/*.pug"],
  "exclude": ["node_modules", "dist"]
}
