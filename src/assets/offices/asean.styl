// ASEAN Office Specific Styles
.asean
  // Color Variables
  $asean-primary = #0066B3  // ASEAN Blue
  $asean-secondary = #FFB81C  // ASEAN Gold
  $asean-accent = #E31837  // ASEAN Red
  $asean-text = #333333
  $asean-light = #F5F5F5
  $asean-hover = rgba(0, 102, 179, 0.1)
  $asean-gradient = linear-gradient(90deg, #0066B3 0%, #1E90FF 100%)
  $asean-card-shadow = 0 4px 24px rgba(0, 102, 179, 0.08)
  $asean-radius = 10px

  // PrimeNG Theme Overrides
  :root
    --p-primary-color: $asean-primary !important
    --p-primary-color-text: #ffffff !important
    --p-primary-50: lighten($asean-primary, 45%) !important
    --p-primary-100: lighten($asean-primary, 40%) !important
    --p-primary-200: lighten($asean-primary, 30%) !important
    --p-primary-300: lighten($asean-primary, 20%) !important
    --p-primary-400: lighten($asean-primary, 10%) !important
    --p-primary-500: $asean-primary !important
    --p-primary-600: darken($asean-primary, 10%) !important
    --p-primary-700: darken($asean-primary, 20%) !important
    --p-primary-800: darken($asean-primary, 30%) !important
    --p-primary-900: darken($asean-primary, 40%) !important
    --p-surface-0: #fff !important
    --p-surface-100: #f8fafd !important
    --p-surface-200: #e9ecef !important
    --p-surface-300: #dee2e6 !important
    --p-surface-400: #fff !important
    --p-surface-500: #fff !important
    --p-text-color: $asean-text !important
    --p-text-color-secondary: #6c757d !important
    --p-primary-text-color: #fff !important
    --p-secondary-text-color: #6c757d !important
    --p-border-radius: 10px
    --p-input-border-color: #ced4da
    --p-input-hover-border-color: $asean-primary
    --p-focus-ring-color: rgba(0, 102, 179, 0.2)
    --p-highlight-bg: rgba(0, 102, 179, 0.08)
    --p-highlight-text-color: $asean-primary
    --p-menuitem-text-color: #fff !important
    --p-menuitem-hover-bg: rgba(255,255,255,0.08) !important
    --p-menuitem-active-bg: $asean-accent !important
    --p-submenu-bg: #fff !important
    --p-submenu-text-color: #495057 !important
    --p-submenu-hover-bg: $asean-hover !important
    --p-menu-separator: #e9ecef !important
  //signin
  
  
  // Header and Navigation
  .app-navbar
    background: $asean-gradient !important
    box-shadow: 0 4px 16px rgba(0, 102, 179, 0.10) !important
    border-radius: 0px !important
    .navbar-title
      color: var(--p-surface-0) !important
      font-weight: 700 !important
      text-transform: uppercase !important
      letter-spacing: 1.5px !important
      font-size: 1.1rem
    .p-menubar-item-label
      color: var(--p-surface-0) !important    
    .p-button-text
      color: var(--p-surface-0) !important
  // Sidebar
  .sidebar-container
    background: #f8fafd !important
    border-right: 1px solid #e9ecef !important
    border-top-right-radius: $asean-radius
    box-shadow: 2px 0 12px rgba(0, 102, 179, 0.04)
    .menu-item
      &.menu-item-active > .menu-link
        background: $asean-hover !important
        color: $asean-primary !important
        font-weight: 600
        &::before
          background: $asean-accent !important
      .menu-link
        border-radius: 6px
        margin: 2px 0
        transition: background 0.2s, color 0.2s
        &:hover
          background: $asean-hover !important
          color: $asean-accent !important
        &.active-route
          background: $asean-accent !important
          color: #fff !important
          border-left: 4px solid $asean-secondary !important

  // Buttons
  .p-button
    &.p-button-primary
      background: $asean-gradient !important
      border: none !important
      border-radius: 6px
      font-weight: 600
      letter-spacing: 0.5px
      box-shadow: 0 2px 8px rgba(0,102,179,0.08)
      &:hover
        background: linear-gradient(90deg, #005999 0%, #007fff 100%) !important
        color: #fff !important

  // Cards and Containers
  .widget-container, .p-card
    border: none !important
    background: #fff !important
    box-shadow: $asean-card-shadow !important
    border-radius: $asean-radius
    margin-bottom: 1.5rem
    .widget-title, .p-card-title
      color: $asean-primary !important
      font-weight: 700 !important
      font-size: 1.1rem
      letter-spacing: 0.5px
    .p-card-header
      background: #f8fafd !important
      border-bottom: 1px solid #e9ecef !important
      border-top-left-radius: $asean-radius
      border-top-right-radius: $asean-radius

  // Tables
  .p-datatable
    .p-datatable-thead > tr > th
      background: #f8fafd !important
      color: $asean-primary !important
      font-weight: 700 !important
      border-bottom: 2px solid $asean-primary !important
      font-size: 1rem
      letter-spacing: 0.5px
    .p-datatable-tbody > tr > td
      background: #fff !important
      font-size: 0.98rem
      border-bottom: 1px solid #e9ecef !important

  // Dashboard Specific
  .dashboard-heading
    background: $asean-gradient !important
    color: #fff !important
    border-radius: $asean-radius
    box-shadow: 0 2px 12px rgba(0, 102, 179, 0.08)
    .dashboard-title
      color: #fff !important
      font-weight: 700 !important
      text-transform: uppercase !important
      letter-spacing: 1.5px !important
      font-size: 2rem
    .dashboard-subtitle
      color: #e9ecef !important
      font-size: 1.1rem
      font-weight: 400

  // User Stats
  .user-stat-card
    border: 1px solid #e9ecef !important
    border-radius: $asean-radius
    box-shadow: 0 2px 8px rgba(0,102,179,0.06)
    background: #fff !important
    &.selected
      border: 2px solid $asean-accent !important
      box-shadow: 0 0 0 2px $asean-accent !important
    .stat-label
      color: $asean-primary
      font-weight: 600
    .stat-count
      color: $asean-accent
      font-size: 1.5rem
    .stat-change
      color: $asean-secondary
      font-weight: 600

  // Form Elements
  .p-inputtext:focus
    border-color: $asean-primary !important
    box-shadow: 0 0 0 0.2rem rgba(0,102,179,0.12) !important
    border-radius: 6px

  // Badges and Tags
  .p-tag
    &.p-tag-success
      background: $asean-accent !important
      color: #fff !important
      border-radius: 6px
      font-weight: 600

  // Footer
  .layout-footer
    background: #f8fafd !important
    border-top: 1px solid #e9ecef !important
    border-bottom-left-radius: $asean-radius
    border-bottom-right-radius: $asean-radius
    p
      color: $asean-primary !important
      font-weight: 600
      letter-spacing: 0.5px
      font-size: 1rem
      margin: 0.5rem 0

  // PrimeNG Specific Components
  .p-menubar
    background: $asean-gradient !important
    border: none !important
    padding: 0.5rem 1.5rem !important
    border-radius: $asean-radius
    box-shadow: 0 2px 12px rgba(0,102,179,0.08)
    .p-menubar-root-list > .p-menuitem > .p-menuitem-link
      padding: 0.75rem 1.25rem !important
      color: #fff !important
      border-radius: 6px !important
      font-weight: 600
      margin: 0 0.25rem !important
      transition: background 0.2s, color 0.2s
      .p-menuitem-text, .p-menuitem-icon, .p-submenu-icon
        color: #fff !important
      &:not(.p-disabled):hover
        background: $asean-accent !important
        color: #fff !important
      &.p-menuitem-active
        background: $asean-secondary !important
        color: $asean-primary !important
    .p-submenu-list
      background: #fff !important
      border: 1px solid #e9ecef !important
      border-radius: 8px !important
      box-shadow: 0 2px 12px rgba(0,0,0,0.08) !important
      .p-menuitem-link
        color: $asean-primary !important
        &:hover
          background: $asean-hover !important
          color: $asean-accent !important
        &.p-menuitem-active
          background: $asean-accent !important
          color: #fff !important

  // Sidebar Menu Enhancement
  .sidebar-container
    .menu-list
      .menu-item
        .menu-link
          padding: 0.75rem 1.25rem !important
          color: var(--p-text-color) !important
          transition: background-color 0.2s, color 0.2s !important
          border-radius: 0 !important
          
          &:hover
            background-color: var(--p-submenu-hover-bg) !important
            color: var(--p-primary-500) !important
            
            .menu-icon
              color: var(--p-primary-500) !important
          
          &.active-route
            background-color: var(--p-highlight-bg) !important
            color: var(--p-primary-500) !important
            border-left: 3px solid var(--p-primary-500) !important
            
            .menu-icon
              color: var(--p-primary-500) !important

        .submenu
          .submenu-item
            .submenu-link
              padding: 0.75rem 1.75rem !important
              color: var(--p-text-color) !important
              transition: background-color 0.2s, color 0.2s !important
              
              &:hover
                background-color: var(--p-submenu-hover-bg) !important
                color: var(--p-primary-500) !important
              
              &.active-route
                background-color: var(--p-highlight-bg) !important
                color: var(--p-primary-500) !important