// Cambodia Office Specific Styles
.kh
  // Color Variables
  $kh-primary = #032E82  // Cambodia Blue
  $kh-secondary = #E30A17  // Cambodia Red
  $kh-accent = #F4C300  // Cambodia Gold
  $kh-text = #333333
  $kh-light = #F5F5F5

  // Header and Navigation
  .app-navbar
    background-color $kh-primary
    box-shadow 0 2px 10px rgba(3, 46, 130, 0.2)
    
    .navbar-title
      color white
      font-weight 600
      text-transform uppercase
      letter-spacing 1px

  // Sidebar
  .sidebar-container
    background-color $kh-light
    border-right 1px solid rgba(3, 46, 130, 0.1)
    
    .menu-item
      &.menu-item-active
        > .menu-link
          background-color rgba(3, 46, 130, 0.1)
          color $kh-primary
          
          &::before
            background-color $kh-primary

  // Buttons
  .p-button
    &.p-button-primary
      background-color $kh-primary
      border-color $kh-primary
      
      &:hover
        background-color darken($kh-primary, 10%)
        border-color darken($kh-primary, 10%)

  // Cards and Containers
  .widget-container
    border 1px solid rgba(3, 46, 130, 0.1)
    background-color white
    box-shadow 0 2px 4px rgba(3, 46, 130, 0.05)
    
    .widget-title
      color $kh-primary
      font-weight 600

  // Tables
  .p-datatable
    .p-datatable-thead > tr > th
      background-color $kh-light
      color $kh-text
      font-weight 600
      border-bottom 2px solid $kh-primary

  // Dashboard Specific
  .dashboard-heading
    background-color $kh-primary
    color white
    
    .dashboard-title
      color white
      font-weight 600
      text-transform uppercase
      letter-spacing 1px
    
    .dashboard-subtitle
      color rgba(255, 255, 255, 0.9)

  // User Stats
  .user-stat-card
    border 1px solid rgba(3, 46, 130, 0.1)
    
    &.selected
      border 2px solid $kh-primary
      box-shadow 0 0 0 1px $kh-primary

  // Form Elements
  .p-inputtext:focus
    border-color $kh-primary
    box-shadow 0 0 0 0.2rem rgba(3, 46, 130, 0.25)

  // Badges and Tags
  .p-tag
    &.p-tag-success
      background-color $kh-primary
      color white

  // Footer
  .layout-footer
    background-color $kh-light
    border-top 1px solid rgba(3, 46, 130, 0.1)
    
    p
      color $kh-text
