// Cambodia MOC Office Specific Styles
.kh-moc
  $kh-moc-primary = #1A365D  // MOC Dark Blue
  $kh-moc-secondary = #C53030  // MOC Red
  $kh-moc-accent = #ECC94B  // MOC Yellow
  $kh-moc-text = #2D3748
  $kh-moc-light = #EDF2F7

  // Header and Navigation
  .app-navbar
    background-color $kh-moc-primary
    box-shadow 0 2px 10px rgba(26, 54, 93, 0.2)
    
    .navbar-title
      color white
      font-weight 600
      text-transform uppercase
      letter-spacing 1px

  // Sidebar
  .sidebar-container
    background-color $kh-moc-light
    border-right 1px solid rgba(26, 54, 93, 0.1)
    
    .menu-item
      &.menu-item-active
        > .menu-link
          background-color rgba(26, 54, 93, 0.1)
          color $kh-moc-primary
          
          &::before
            background-color $kh-moc-primary

  // Buttons
  .p-button
    &.p-button-primary
      background-color $kh-moc-primary
      border-color $kh-moc-primary
      
      &:hover
        background-color darken($kh-moc-primary, 10%)
        border-color darken($kh-moc-primary, 10%)

  // Cards and Containers
  .widget-container
    border 1px solid rgba(26, 54, 93, 0.1)
    background-color white
    box-shadow 0 2px 4px rgba(26, 54, 93, 0.05)
    
    .widget-title
      color $kh-moc-primary
      font-weight 600

  // Tables
  .p-datatable
    .p-datatable-thead > tr > th
      background-color $kh-moc-light
      color $kh-moc-text
      font-weight 600
      border-bottom 2px solid $kh-moc-primary

  // Dashboard Specific
  .dashboard-heading
    background-color $kh-moc-primary
    color white
    
    .dashboard-title
      color white
      font-weight 600
      text-transform uppercase
      letter-spacing 1px
    
    .dashboard-subtitle
      color rgba(255, 255, 255, 0.9)

  // User Stats
  .user-stat-card
    border 1px solid rgba(26, 54, 93, 0.1)
    
    &.selected
      border 2px solid $kh-moc-primary
      box-shadow 0 0 0 1px $kh-moc-primary

  // Form Elements
  .p-inputtext:focus
    border-color $kh-moc-primary
    box-shadow 0 0 0 0.2rem rgba(26, 54, 93, 0.25)

  // Badges and Tags
  .p-tag
    &.p-tag-success
      background-color $kh-moc-primary
      color white

  // Footer
  .layout-footer
    background-color $kh-moc-light