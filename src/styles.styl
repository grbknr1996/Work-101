// ============================================
// Responsive Layout, Navbar, Sidebar Styles
// ============================================

// Sidebar overlay for mobile
.sidebar-overlay
  display none
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  background rgba(0,0,0,0.3)
  z-index 1099

// Sidebar base
.sidebar-container
  transition transform 0.3s cubic-bezier(0.4,0,0.2,1)
  will-change transform, width
  backface-visibility hidden
  z-index 1000
  width 240px
  background-color var(--p-menu-background, #f8f9fa)
  border-right 1px solid var(--p-surface-border, #e9ecef)
  overflow-x hidden
  position fixed
  top 0
  left 0
  height 100vh

// Sidebar compact
.sidebar-container.sidebar-compact
  width 64px
  .menu-label, .menu-badge, .submenu-icon
    display none
  .menu-icon
    margin-right 0

// Sidebar mobile
.sidebar-container.sidebar-mobile
  transform translateX(-100%)
  box-shadow 2px 0 10px rgba(0,0,0,0.1)
  z-index 1100
  width 240px
  position fixed
  top 0
  left 0
  height 100vh

.sidebar-container.sidebar-mobile.sidebar-visible
  transform translateX(0)

// Sidebar visible on desktop
@media (min-width: 801px)
  .sidebar-container
    transform none
    position fixed
    left 0
    top 0
    width 240px
    height 100vh
  .sidebar-overlay
    display none
  .layout-content
    margin-left 240px !important
    margin 2rem !important

// Sidebar overlay and content margin for mobile/tablet
@media (max-width: 1024px)
  .sidebar-container
    position fixed
    top 0
    left 0
    height 100vh
    width 240px
    z-index 1100
    transform translateX(-100%)
  .sidebar-container.sidebar-visible
    transform translateX(0)
  .sidebar-overlay
    display block
  .layout-content
    margin-left 0 !important
    margin 0.5rem !important
    width 100% !important
    padding 0.5rem !important
  .layout-main
    flex-direction column
    margin-left 0 !important
  .app-navbar
    width 100% !important
    left 0 !important
    margin-left 0 !important

// Ensure menu items are always visible and not clipped
.menu-list, .submenu-list
  overflow visible !important
  max-width 100vw !important

// Fix Home/menu item visibility in sidebar
.menu-item, .submenu-item
  max-width 100vw !important
  overflow visible !important

// Prevent horizontal scroll on mobile/tablet
body, html, .layout-wrapper, .layout-main, .layout-content
  overflow-x hidden !important

// Navbar tweaks for mobile
@media screen and (max-width: 768px)
  .navbar-end
    flex-wrap wrap
    flex-direction row
    justify-content flex-end
    align-items center
    gap 0.25rem
    min-width 0
    overflow-x auto
    padding-right 0.25rem
    z-index 1002
    position: relative
    // Ensure notification bell is always visible
    .notification-container
      order 1
      flex 0 0 auto
      margin-right 0.25rem
      z-index 1003
      position: relative
    // Optionally hide user name if space is tight
    .user-profile .user-name
      display none
    // Optionally shrink/hide language selector if space is tight
    .language-dropdown-container
      min-width 0
      max-width 80px
      overflow hidden
      .language-selector
        min-width 0
        max-width 80px
        font-size 0.9rem
        padding 0.1rem
    // Mobile menu toggle always last
    .mobile-menu-toggle
      order 99
      flex 0 0 auto
  // Hide PrimeNG Menubar built-in hamburger in mobile view
  .p-menubar-mobile .p-menubar-button
    display none !important
  // Notification overlay panel width and position for mobile
  :host ::ng-deep .p-overlaypanel
    max-width 95vw
    min-width 220px
    left 2vw !important
    right 2vw !important
    top 56px !important
    z-index 2000 !important
    .notification-list
      max-height 50vh
      overflow-y auto

